<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--
        *************************************************************************************
        Dubbo protocol
        *************************************************************************************
    -->
    <dubbo:protocol name="${application.dubbo.protocol.name}" serialization="${application.dubbo.protocol.serialization}" port="${application.dubbo.protocol.port}"/>
    
    <!--
        *************************************************************************************
        Dubbo Registry
        *************************************************************************************
    -->
    <dubbo:application name="${spring.application.name}" organization="${application.dubbo.application.organization}" owner="${application.dubbo.application.owner}"/>
    <dubbo:registry protocol="zookeeper" address="${application.dubbo.registry.address}" client="${application.dubbo.registry.client}"/>
    <!-- <dubbo:monitor protocol="registry"/> -->
    <dubbo:provider proxy="javassist" timeout="60000" retries="${application.dubbo.retries}"/>
    <dubbo:service interface="org.infinity.passport.spi.service.UserService" ref="userServiceImpl" />
    <dubbo:service interface="org.infinity.passport.spi.service.AuthorityService" ref="authorityServiceImpl" />
    <dubbo:service interface="org.infinity.passport.spi.service.UserAuthorityService" ref="userAuthorityServiceImpl" />
    <dubbo:service interface="org.infinity.passport.spi.service.UserSessionService" ref="userSessionServiceImpl" />
</beans>
